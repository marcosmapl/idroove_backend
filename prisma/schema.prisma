generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Category {
    SEDAN
    HATCH
    SUV
    PICKUP
    VAN
    COUPE
    CONVERTIBLE
    OTHER
}

enum Transmission {
    MANUAL
    AUTOMATIC
    SEMI_AUTOMATIC
    CVT
    OTHER
}

enum Steering {
    MANUAL
    HYDRAULIC
    ELECTRIC
    OTHER
}

enum LicensingStatus {
    REGULAR
    IRREGULAR
    PENDING
}

enum VehicleStatus {
    AVAILABLE
    SOLD
    IN_REPAIR
    RESERVED
}

model Vehicle {
    id                    Int             @id @default(autoincrement())
    placa                 String          @unique
    renavam               String          @unique
    ano                   Int
    marca                 String
    modelo                String
    categoria             Category
    cor                   String
    portas                Int
    motorizacao           String
    tipoCombustivel       String          @map("tipo_combustivel")
    tipoCambio            Transmission    @map("tipo_cambio")
    direcao               Steering
    kilometragem          Int
    codigoUnidade         Int             @default(1) @map("codigo_unidade")
    situacaoLicenciamento LicensingStatus @map("situacao_licenciamento")
    situacaoVeiculo       VehicleStatus   @map("situacao_veiculo")
    createdAt             DateTime        @default(now())
    updatedAt             DateTime        @updatedAt
}
